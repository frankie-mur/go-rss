{{define "login"}}
{{template "base"}}
  <body class="container mx-auto">
    <h1 class="font-bold text-2xl my-16">Log In</h1>
    <form action="/users/login" method="post">
      <input type="email" id="email" name="email" class="input input-bordered w-full max-w-xs" placeholder="Enter your email">
      <button class="btn" type="submit">Login</button>
    </form>
  </body>
{{end}}