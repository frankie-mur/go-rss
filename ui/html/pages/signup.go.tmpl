{{define "signup"}}
{{template "base"}}
  <body class="container mx-auto">
    <h1 class="font-bold text-2xl my-16">Sign Up</h1>
    <form hx-post="/users/signup" hx-trigger="submit">
      <input type="text" id="name" name="name" class="input input-bordered w-full max-w-xs" placeholder="Enter your name">
      <input type="email" id="email" name="email" class="input input-bordered w-full max-w-xs" placeholder="Enter your email">
      <button type="submit">Signup</button>
    </form>
  </body>
{{end}}
